{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Liste des utilisateurs</h1>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}
        <table class="table table-hover">
            <thead>
            <tr>
                <th>ID</th>
                <th>Nom d'utilisateur</th>
                <th>Email</th>
                <th>Etat</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.active ? 'Actif' : 'Inactif' }}</td>
                    <td>
                        <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-primary">Modifier</a>
                        <a href="{{ path('admin_user_toggle_active', {'id': user.id}) }}" class="btn btn-sm {{ user.active ? 'btn-danger' : 'btn-success' }}">
                            {{ user.active ? 'DÃ©sactiver' : 'Activer' }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('admin_admin_users_create') }}" class="btn btn-primary">Ajouter un nouvel utilisateur</a>
    </div>
{% endblock %}

{% block title %}

{% endblock %}

