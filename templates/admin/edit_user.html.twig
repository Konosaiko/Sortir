{% extends 'base.html.twig' %}

{% block title %}Éditer Utilisateur{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h2 class="mb-4 text-center">Éditer Utilisateur</h2>
        {{ form_start(userForm, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

        {% for field in userForm %}
            {% if field.vars.name != '_token' %}
                <div class="mb-3">
                    {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(field, {'attr': {'class': 'text-danger'}}) }}
                </div>
            {% endif %}
        {% endfor %}

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Sauvegarder</button>
        </div>

        {{ form_end(userForm) }}
    </div>
{% endblock %}
