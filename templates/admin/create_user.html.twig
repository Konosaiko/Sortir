{% extends 'base.html.twig' %}

{% block title %}Créer un nouvel utilisateur{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-3 text-center">Créer un nouvel utilisateur</h1>
        <div class="row justify-content-center">
            <div class="col-md-8">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                {% for field in form %}
                    {% if field.vars.name != '_token' %}
                        <div class="mb-3">
                            {% if field.vars.name == 'active' %}
                                <div class="form-check">
                                    {{ form_widget(field, {'attr': {'class': 'form-check-input'}}) }}
                                    {{ form_label(field, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                    {{ form_errors(field, {'attr': {'class': 'form-text text-danger'}}) }}
                                </div>
                            {% else %}
                                {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(field, {'attr': {'class': 'form-text text-danger'}}) }}
                            {% endif %}
                        </div>
                    {% endif %}
                {% endfor %}

                <button type="submit" class="btn btn-success btn-lg btn-block">Créer</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
