{% extends 'base.html.twig' %}

{% block title %}Modifier une ville{% endblock %}

{% block body %}
    <h1>Modifier une ville</h1>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                {# Affichage des Ã©ventuels messages flash #}
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">{{ message }}</div>
                {% endfor %}
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger">{{ message }}</div>
                {% endfor %}

                {# Formulaire de modification d'une ville #}
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.nom, 'Nom de la ville') }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.nom) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.codePostal, 'Code Postal') }}
                    {{ form_widget(form.codePostal, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.codePostal) }}
                </div>
                <button type="submit" class="btn btn-primary">Enregistrer</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}