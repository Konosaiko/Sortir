{# templates/partials/navbar.html.twig #}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <!-- Logo et nom du site à gauche -->
        <a class="navbar-brand" href="{{ path('app_home') }}">
            <img src="{{ asset('images/logosortir.png') }}" alt="Logo" width="50" height="50" class="d-inline-block align-top">
        </a>
        <a class="nav-link" href="{{ path('app_home') }}">Sortir.com</a>

