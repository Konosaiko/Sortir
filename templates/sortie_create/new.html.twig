{% extends 'base.html.twig' %}

{% block title %}Créer une sortie{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Créer une sortie</h1>

        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

        <div class="mb-3">
            {{ form_label(form.nom, 'Nom de la sortie', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nom, {'attr': {'class': 'form-text text-danger'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.dateHeureDebut, 'Date et heure de début', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.dateHeureDebut, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.dateHeureDebut, {'attr': {'class': 'form-text text-danger'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.duration, 'Durée', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.duration, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.duration, {'attr': {'class': 'form-text text-danger'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.dateLimite, 'Date limite d\'inscription', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.dateLimite, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.dateLimite, {'attr': {'class': 'form-text text-danger'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.registerLimit, 'Nombre de places', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.registerLimit, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.registerLimit, {'attr': {'class': 'form-text text-danger'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.infos, 'Informations', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.infos, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.infos, {'attr': {'class': 'form-text text-danger'}}) }}
        </div>
        <div class="mb-3">
            <label class="form-label">Campus : {{ app.user.campus.nom }}</label>
        </div>
        <div class="mb-3">
            {{ form_label(form.address, 'Adresse', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.address, {'attr': {'class': 'form-text text-danger'}}) }}
        </div>
        <div class="form-group text-center">
            {{ form_widget(form.enregistrer, {'attr': {'class': 'btn btn-primary mr-2'}}) }}
            {{ form_widget(form.publier, {'attr': {'class': 'btn btn-success mr-2'}}) }}
            <a href="{{ path('app_home') }}" class="btn btn-secondary">Retour à l'accueil</a>
        </div>

        {{ form_end(form) }}

        {% for flashMessage in app.flashes('error') %}
            <div class="alert alert-danger">{{ flashMessage }}</div>
        {% endfor %}
    </div>
{% endblock %}
